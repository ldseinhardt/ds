<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="financesapp.controller.TransactionsForm">
    <center>
        <ScrollPane BorderPane.alignment="CENTER">
            <content>
                <VBox alignment="CENTER" minWidth="298.0" spacing="10.0">
                    <children>
                        <Label fx:id="transactionType" text="Despesa">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <DatePicker fx:id="date" editable="false" maxWidth="1.7976931348623157E308" onAction="#hideError" prefWidth="150.0" promptText="Data" />
                                <ComboBox fx:id="freq" maxWidth="120.0" minWidth="120.0" onAction="#hideError" prefWidth="120.0" promptText="Ocorrência" />
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="value" maxWidth="1.7976931348623157E308" onAction="#hideError" prefWidth="150.0" promptText="Valor" />
                                <ToggleButton fx:id="status" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false" prefWidth="120.0" text="Pago" />
                            </children>
                        </HBox>
                        <ComboBox fx:id="category" maxWidth="1.7976931348623157E308" onAction="#hideError" promptText="Categoria" />
                        <ComboBox fx:id="account" maxWidth="1.7976931348623157E308" onAction="#hideError" promptText="Conta" />
                        <TextField fx:id="description" maxWidth="1.7976931348623157E308" promptText="Descrição" />
                        <TextArea fx:id="information" maxWidth="280.0" prefHeight="150.0" promptText="Informações" />
                        <Label fx:id="error" prefWidth="271.0" text="*" textFill="#f20808" visible="false" />
                        <HBox prefHeight="29.0" prefWidth="202.0" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onSave" prefWidth="90.0" text="Salvar" />
                                <Button mnemonicParsing="false" onAction="#onClear" prefWidth="80.0" text="Limpar" />
                                <Button mnemonicParsing="false" onAction="#onCancel" prefWidth="90.0" text="Cancelar" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
