{% extends "layout.twig" %}

{% block title %}
  {{ parent() }} :: Contato
{% endblock %}

{% block content %}

  <div class="container">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      <div class="panel panel-default">
        <div class="panel-body">
          <form class="form-horizontal" method="POST">
            <fieldset>
              <h3>Contato</h3>
              <hr width="75%">
              {% if response %}
                <div class="text-{% if response.status %}success{% else %}danger{% endif %}">
                  {{ response.message }}
                </div>
              {% endif %}
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <input type="text" class="form-control" id="name" name="name" placeholder="Nome" value="{% if userLogged %}{{ userLogged.name }}{% endif %}" minlength="5" maxlength="64" required autofocus>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{% if userLogged %}{{ userLogged.email }}{% endif %}" required>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <input type="text" class="form-control" id="subject" name="subject" placeholder="Assunto" minlength="4" maxlength="64" required>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <textarea class="form-control" rows="7" id="message" name="message" placeholder="Mensagem" minlength="10" maxlength="5000" required></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <button type="submit" class="btn btn-raised btn-primary">Enviar</button>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
