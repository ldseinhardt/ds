{% extends "layout.twig" %}

{% block title %}
	{{ parent() }} :: Recuperação de login
{% endblock %}

{% block content %}

  <div class="col-sm-4 col-sm-offset-4 text-center">
    <div class="panel panel-default">
      <div class="panel-body">
        <form class="form-horizontal" id="form" method="POST">
          <fieldset>
            <legend>Recuperar senha</legend>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
              </div>
            </div>
           <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <p>Você receberá um email com os procedimentos necessários para recuperação de senha.</p>
              <button type="submit" class="btn btn-raised btn-primary">Recuperar</button>
            </div>
          </div>
          </fieldset>
        </form>
        <a href="{{ url('login') }}">Login</a> | <a href="{{ url('register') }}">Cadastro</a>
      </div>
    </div>
  </div>

{% endblock %}
